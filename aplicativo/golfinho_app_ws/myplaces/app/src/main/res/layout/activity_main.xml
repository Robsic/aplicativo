<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_angle_right"
        android:layout_below="@id/joystickView_right"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="0Â°"/>


    <TextView
        android:id="@+id/textView_strength_right"
        android:layout_below="@+id/textView_angle_right"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="0%"/>


    <TextView
        android:id="@+id/textView_coordinate_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/joystickView_right"
        android:layout_alignParentLeft="true"
        android:textSize="26sp"
        android:text="x0.00:x0.00" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_coordinate_right"
        android:layout_alignParentLeft="true"
        android:text="@string/number"
        android:textSize="26sp" />

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:id="@+id/joystickView_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="64dp"
        custom:JV_backgroundColor="#A9A9A9"
        custom:JV_borderColor="#2E2E2E"
        custom:JV_borderWidth="8dp"
        custom:JV_buttonColor="#2E2E2E"
        android:rotation="180"
        />


</RelativeLayout>